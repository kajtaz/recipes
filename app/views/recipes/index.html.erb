<h1>List of recepies</h1>




<div class="container">
  <div class="row">
    <div class="col-xs-12">
<% @recipes.each do |recipe|%>
      <table class="table table-hover">
      <td><%= recipe.title %></td>
      <td><%= recipe.text %></td>
      <td><%= link_to 'Show', recipe_path(recipe) %></td>
      <td><%= link_to 'Destroy', recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
      </table>
<% end %>



<%= link_to "New", new_recipe_path, class:'btn btn-primary btn-sm' %>
